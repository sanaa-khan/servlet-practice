<!-- "http://java.sun.com/dtd/web-app_2_3.dtd" >-->

<web-app version="2.5">

  <display-name>Sample Servlet Example</display-name>

	<welcome-file-list>
		<welcome-file>LoginPage.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
	<servlet-name>LogInOutServlet</servlet-name>
	<display-name>LogInOutServlet</display-name>
	<description>Login/Logout user</description>
	<servlet-class>com.test.servlet.LogInOutServlet</servlet-class>
</servlet>

	<!-- map servlet to default url (same as DispatchServlet in SpringMvc) -->
	<servlet-mapping>
		<servlet-name>LogInOutServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
</web-app>
